/* Goal SET the SCAN bit of ADC1 */

/* ADC1 is connected to the APB2 bus */

#define ADC_BASE_ADDR			(0x40012000UL)
#define ADC_CR1_OFFSET			(0x04UL)
#define ADC_CR1					(ADC_BASE_ADDR + ADC_CR1_OFFSET) /* SCAN is on bit position 8, set to activate */
#define RCC_BASE_ADDR			(0x40023800UL)
#define RCC_APB2ENR_OFFSET		(0x44UL)
#define RCC_APB2ENR				(RCC_BASE_ADDR + RCC_APB2ENR_OFFSET) /* ADC1EN is on bit position 8, set to activate */

int main(void)
{
	uint32_t *pADC_CR1 		= (uint32_t*)(ADC_CR1);
	uint32_t *pRCC_APB2ENR 	= (uint32_t*)(RCC_APB2ENR);

	/* Enable clock for ADC1 */
